<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyNewMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvNewMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_pending_messages"
            android:padding="4dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/unread_messages"
            android:textColor="@color/bg_grey"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_tv_date_chat"
        android:paddingStart="8dp"
        android:paddingTop="6dp"
        android:paddingEnd="8dp"
        android:paddingBottom="6dp"
        android:text="6 April 2020"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_first_bubble_incoming">

        <com.quarks.android.Utils.MessageBubbleLayout
            android:id="@+id/lyBubbleMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="270sp"
                android:paddingStart="16dp"
                android:paddingEnd="7dp"
                android:text="qawdqwdWDqwddqawdaa"
                android:textColor="@color/bg_negro"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/lyTimeAndCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="12:00"
                    android:textSize="12.5sp" />

                <ImageView
                    android:id="@+id/ivTick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="4dp"
                    android:visibility="visible" />
<!--                android:src="@drawable/ic_check"-->

            </LinearLayout>

        </com.quarks.android.Utils.MessageBubbleLayout>

    </LinearLayout>


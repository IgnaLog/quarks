<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%"
    android:fromDegrees="0"
    android:toDegrees="360">
    <shape
        android:shape="ring"
        android:innerRadiusRatio="3.2"
        android:thicknessRatio="8.7"
        android:useLevel="false">
        <size
            android:width="30dp"
            android:height="30dp" />
        <gradient
            android:type="sweep"
            android:useLevel="false"
            android:startColor="@color/bg_trasparent"
            android:endColor="@color/bg_green2"
            android:angle="0"/>
    </shape>
</rotate>
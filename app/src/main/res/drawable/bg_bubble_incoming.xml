<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow Layers-->

    <item android:left="8.5dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="3px"
                android:left="2px"
                android:right="2px" />
            <solid android:color="#01000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!--===============-->

    <item android:left="8.5dp">
        <shape android:shape="rectangle">
            <padding android:bottom="3px" />
            <solid android:color="#09000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!--===============-->


    <item android:left="8.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <padding
                android:bottom="3px"
                android:left="2px"
                android:right="2px" />
            <solid android:color="#10000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!--ForeGround-->


    <item android:left="8.5dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="3dp"
                android:right="8dp"
                android:top="5dp" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>

</layer-list>